<NativeSelectBox
  @value={{this.foo2Changeset}}
  @onSelect={{this.handleSelectFoo}} as |sb|
>
  {{#each this.foos as |foo|}}
    <sb.Option @value={{foo}}>
      {{foo.name}}
    </sb.Option>
  {{/each}}
</NativeSelectBox>


<NativeSelectBox
  @value={{this.bar2Proxy}}
  @onSelect={{this.handleSelectBar}} as |sb|
>
  {{#each this.bars as |bar|}}
    <sb.Option @value={{bar}}>
      {{bar.name}}
    </sb.Option>
  {{/each}}
</NativeSelectBox>